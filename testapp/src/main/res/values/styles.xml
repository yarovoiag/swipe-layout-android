<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CenterTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/center_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RightTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/right_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LeftTextView">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/left_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
